@code {

    [CascadingParameter]
    bool iconMenuActive { get; set; }

    _Dialogs? _dialogs { get; set; }

    IEnumerable<string> selectedAddUsers;
    IEnumerable<string> selectedDataSources;
    IEnumerable<string> selectedDataTypes;
    IEnumerable<string> selectedCorrectionReasons;

    IEnumerable<MesMovementsDTO>? mesMovementsDTOs;

    List<string> distinctAddUsersInList = new List<string>();
    List<string> distinctDataSourcesInList = new List<string>();
    List<string> distinctDataTypesInList = new List<string>();
    List<string> distinctCorrectionReasonsInList = new List<string>();

    IList<MesMovementsDTO>? selectedTableMesMovements;

    RadzenDataGrid<MesMovementsDTO> mesMovementsDTOGrid;

    DateTime? startDate = DateTime.Today;
    DateTime? endDate = DateTime.Today.AddDays(1).AddSeconds(-1);

    DateTime? oldStartDate = DateTime.Today;
    DateTime? oldEndDate = DateTime.Today.AddDays(1).AddSeconds(-1);

    bool excelExportFlag = false;

    int applyRadioGroupValue = 1;
    int oldApplyRadioGroupValue = 1;

    bool ApplyButtonDisabled = false;

    string applyButtonText = "Обновить";
    string applyButtonIcon = "refresh";
    ButtonStyle applyButtonStyle = ButtonStyle.Primary;

    public bool IsLoading { get; set; } = true;
    public AdminMode IsAdmin { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            IsAdmin = await _authorizationRepository.CurrentUserIsInAdminRole(SD.MessageBoxMode.On);
            if (IsAdmin == AdminMode.IsAdmin || IsAdmin == AdminMode.IsAdminReadOnly)
            {

                applyRadioGroupValue = 1;
                ApplyButtonDisabled = false;

                if (startDate == null || endDate == null)
                {
                    startDate = DateTime.Today;
                    endDate = DateTime.Today.AddDays(1).AddSeconds(-1);
                }
                IsLoading = true;
                await LoadStateAsync();
                await Task.Delay(100);
                await InvokeAsync(StateHasChanged);
                await GetRows();
                IsLoading = false;
                await Task.Delay(100);
                await InvokeAsync(StateHasChanged);
            }
            else
                _navigationManager.NavigateTo("/dataarchive");
        }
    }


    DataGridSettings _mesMovementsGridSettings;
    public DataGridSettings MesMovementsGridSettings
    {
        get
        {
            return _mesMovementsGridSettings;
        }
        set
        {
            if (_mesMovementsGridSettings != value)
            {
                _mesMovementsGridSettings = value;
                InvokeAsync(SaveStateAsync);
            }
        }
    }

    private async Task LoadStateAsync()
    {
        await Task.CompletedTask;
        if (!(await SD.CheckPageSettingsVersion("MesMovementsGridSettings", _jsRuntime)))
            return;
        var result = await _jsRuntime.InvokeAsync<string>("window.localStorage.getItem", "MesMovementsGridSettings");
        if (!string.IsNullOrEmpty(result))
        {
            _mesMovementsGridSettings = JsonSerializer.Deserialize<DataGridSettings>(result);
            if (_mesMovementsGridSettings != null)
            {
                var col_var = _mesMovementsGridSettings.Columns.Where(c => c.Property == "AddUserDTOFK.UserName").FirstOrDefault();
                if (col_var.FilterValue != null)
                {
                    selectedAddUsers = JsonSerializer.Deserialize<List<string>>(col_var.FilterValue.ToString());
                }
                var col_var2 = _mesMovementsGridSettings.Columns.Where(c => c.Property == "DataSourceDTOFK.Name").FirstOrDefault();
                if (col_var2.FilterValue != null)
                {
                    selectedDataSources = JsonSerializer.Deserialize<List<string>>(col_var2.FilterValue.ToString());
                }
                var col_var3 = _mesMovementsGridSettings.Columns.Where(c => c.Property == "DataTypeDTOFK.Name").FirstOrDefault();
                if (col_var3.FilterValue != null)
                {
                    selectedDataTypes = JsonSerializer.Deserialize<List<string>>(col_var3.FilterValue.ToString());
                }
                var col_var4 = _mesMovementsGridSettings.Columns.Where(c => c.Property == "ToStringCorrectionReason").FirstOrDefault();
                if (col_var4.FilterValue != null)
                {
                    selectedCorrectionReasons = JsonSerializer.Deserialize<List<string>>(col_var4.FilterValue.ToString());
                }
            }
        }
    }

    private async Task SaveStateAsync()
    {
