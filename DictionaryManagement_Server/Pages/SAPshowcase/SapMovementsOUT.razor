    DateTime? startDate = DateTime.Today;
    DateTime? endDate = DateTime.Today.AddDays(1).AddSeconds(-1);

    bool excelExportFlag = false;

    int applyRadioGroupValue = 1;

    bool ApplyButtonDisabled = false;

    public bool IsLoading { get; set; } = true;
    public AdminMode IsAdmin { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            IsAdmin = await _authorizationRepository.CurrentUserIsInAdminRole(SD.MessageBoxMode.On);
            if (IsAdmin == AdminMode.IsAdmin || IsAdmin == AdminMode.IsAdminReadOnly)
            {
                applyRadioGroupValue = 1;
                ApplyButtonDisabled = false;

                if (startDate == null || endDate == null)
                {
                    startDate = DateTime.Today;
                    endDate = DateTime.Today.AddDays(1).AddSeconds(-1);
                }
                IsLoading = true;
                await LoadStateAsync();
                await Task.Delay(100);
                await InvokeAsync(StateHasChanged);

                await GetRows();

                IsLoading = false;
                await Task.Delay(100);
                await InvokeAsync(StateHasChanged);
            }
            else
                _navigationManager.NavigateTo("/SAPshowcase");
        }
    }


    DataGridSettings _sapMovementsOUTGridSettings;
    public DataGridSettings SapMovementsOUTGridSettings
    {
        get
        {
            return _sapMovementsOUTGridSettings;
        }
        set
        {
            if (_sapMovementsOUTGridSettings != value)
            {
                _sapMovementsOUTGridSettings = value;
                InvokeAsync(SaveStateAsync);
            }
        }
    }

    private async Task LoadStateAsync()
    {
        await Task.CompletedTask;
        if (!(await SD.CheckPageSettingsVersion("SapMovementsOUTGridSettings", _jsRuntime)))
            return;
        var result = await _jsRuntime.InvokeAsync<string>("window.localStorage.getItem", "SapMovementsOUTGridSettings");
        if (!string.IsNullOrEmpty(result))
        {
            _sapMovementsOUTGridSettings = JsonSerializer.Deserialize<DataGridSettings>(result);
            if (_sapMovementsOUTGridSettings != null)
            {
                var col_var2 = _sapMovementsOUTGridSettings.Columns.Where(c => c.Property == "SapUnitOfMeasure").FirstOrDefault();
                if (col_var2.FilterValue != null)
                {
                    selectedSapUnitOfMeasure = JsonSerializer.Deserialize<List<string>>(col_var2.FilterValue.ToString());
                }
            }
        }
    }

    private async Task SaveStateAsync()
    {
        await Task.CompletedTask;
        await _jsRuntime.InvokeVoidAsync("eval", $@"window.localStorage.setItem('SapMovementsOUTGridSettings', '{JsonSerializer.Serialize<DataGridSettings>(SapMovementsOUTGridSettings)}')");
        await SD.SetPageSettingsVersion("SapMovementsOUTGridSettings", _jsRuntime);
    }


    private async Task ChangeStartDate()
    {
        if (startDate == null)
        {
            await _jsRuntime.ToastrWarning("Пустая дата начала интервала");
            ApplyButtonDisabled = true;
            return;
        }
        if (startDate != null && endDate != null)
        {
            if (startDate > endDate)
            {
                await _jsRuntime.ToastrWarningLight("Дата начала интервала больше даты окончания");
                ApplyButtonDisabled = true;
                return;
            }
            var duration = ((DateTime)endDate - (DateTime)startDate).Duration();
            if (duration.TotalDays > 31)
            {
                await _jsRuntime.ToastrWarningLight("Интервал дат больше 31 дня. Таймаут запроса к БД " + (SD.SqlCommandConnectionTimeout / 60).ToString() + " минуты.");
            }
            ApplyButtonDisabled = false;
        }
        // ApplyButtonDisabled = false;
        // maxEndDate = ((DateTime)startDate).AddMonths(1).AddSeconds(-1);
        // minEndDate = ((DateTime)startDate).AddDays(-1);
        // if (endDate > maxEndDate)
        //     endDate = maxEndDate;

    }

    private async Task ChangeEndDate()
    {
        if (endDate == null)
        {
            await _jsRuntime.ToastrWarning("Пустая дата окончания");
            ApplyButtonDisabled = true;
            return;
        }
        if (startDate != null && endDate != null)
        {
            if (startDate > endDate)
            {
                await _jsRuntime.ToastrWarningLight("Дата начала интервала больше даты окончания");
                ApplyButtonDisabled = true;
                return;
            }
            var duration = ((DateTime)endDate - (DateTime)startDate).Duration();
            if (duration.TotalDays > 31)
            {
                await _jsRuntime.ToastrWarningLight("Интервал дат больше 31 дней. Таймаут запроса к БД " + (SD.SqlCommandConnectionTimeout / 60).ToString() + " минуты.");
            }
            ApplyButtonDisabled = false;
        }
        // ApplyButtonDisabled = false;
    }


    async Task GetRows()
    {
        IsLoading = true;
        await LoadStateAsync();
        await Task.Delay(100);
        await InvokeAsync(StateHasChanged);
        if (applyRadioGroupValue == 1)
            sapMovementsOUTDTOs = await _sapMovementsOUTRepository.GetAllByTimeInterval(startDate, endDate, "VALUETIME");
        else
            sapMovementsOUTDTOs = await _sapMovementsOUTRepository.GetAllByTimeInterval(startDate, endDate, "ADDTIME");

        List<string> distinctSapUnitOfMeasureInList = new List<string>();
        await GetDistincts();

        ApplyButtonDisabled = false;
        IsLoading = false;
        await Task.Delay(100);
        await InvokeAsync(StateHasChanged);
    }


    async Task EditRow(SapMovementsOUTDTO? sapMovementsOUTDTO)
    {
        await _jsRuntime.ToastrSuccess("Не реализовано");
    }


    async Task DeleteRow(SapMovementsOUTDTO sapMovementsOUTDTO)
    {
        await _jsRuntime.ToastrSuccess("Не реализовано");
    }


    async Task ExcelExport()
    {
        excelExportFlag = true;
        await Task.Delay(200);
        await InvokeAsync(StateHasChanged);

        int viewCount = sapMovementsOUTDTOGrid.View.Count();

        // запас 100 строк на заголовки например
        if (viewCount > (SD.MaxAllowedExcelRows - 100))
        {
            await _jsRuntime.InvokeVoidAsync("ShowSwal", "warning", "В выборке " + viewCount.ToString()
                + " записей, что близко или превышает максимально доступное для Excel количество записей в "
                + SD.MaxAllowedExcelRows.ToString() + " строк." +
                "\n\n\n Установите фильтры или уменьшите интервал дат, чтобы количество выгружаемых строк не превышало этот предел.");
        }
        else
        {
            if (IsAdmin == AdminMode.IsAdmin || IsAdmin == AdminMode.IsAdminReadOnly)
            {
                string userLogin = await _authorizationRepository.GetCurrentUser(SD.MessageBoxMode.Off, SD.LoginReturnMode.LoginOnly);
                string filename = "SapMovementsOUT_Export_" + userLogin.Replace("\\", "_") + "_" + DateTime.Now.ToString().Replace(":", "_") + ".xlsx";
                await _simpleExcelExportRepository.GenerateExcelSapMovementsOUT(filename, (IEnumerable<SapMovementsOUTDTO>)sapMovementsOUTDTOGrid.View);

                await _jsRuntime.InvokeVoidAsync("open", "DownloadFileController/SimpleExcelExport/" + filename, "_blank");
            }
        }
        excelExportFlag = false;
        await Task.Delay(200);
        await InvokeAsync(StateHasChanged);
    }

    async Task GetDistincts()
    {
        if (sapMovementsOUTDTOs != null)
        {
            distinctSapUnitOfMeasureInList = (List<string>)sapMovementsOUTDTOs.Where(u => u.SapUnitOfMeasure != null).OrderBy(u => u.SapUnitOfMeasure)
                .Select(u => u.SapUnitOfMeasure).Distinct().ToList();
        }
    }

    void OnSelectedSapUnitOfMeasureChange(object value)
    {
        if (selectedSapUnitOfMeasure != null && !selectedSapUnitOfMeasure.Any())
        {
            selectedSapUnitOfMeasure = null;
        }
    }

