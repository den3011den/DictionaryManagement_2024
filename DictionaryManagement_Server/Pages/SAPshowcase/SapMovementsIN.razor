    RadzenDataGrid<SapMovementsINDTO> sapMovementsINDTOGrid;

    IEnumerable<string> selectedMoveTypes;
    IEnumerable<string> selectedSapUnitOfMeasure;
    List<string> distinctMoveTypesInList = new List<string>();
    List<string> distinctSapUnitOfMeasureInList = new List<string>();

