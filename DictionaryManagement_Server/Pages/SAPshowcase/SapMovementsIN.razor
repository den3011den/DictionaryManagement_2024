    DateTime? startDate = DateTime.Today;
    DateTime? endDate = DateTime.Today.AddDays(1).AddSeconds(-1);

    DateTime? oldStartDate = DateTime.Today;
    DateTime? oldEndDate = DateTime.Today.AddDays(1).AddSeconds(-1);

    bool excelExportFlag = false;

    int applyRadioGroupValue = 1;
    int oldApplyRadioGroupValue = 1;

    bool ApplyButtonDisabled = false;

    string applyButtonText = "Обновить";
    string applyButtonIcon = "refresh";
    ButtonStyle applyButtonStyle = ButtonStyle.Primary;

    public bool IsLoading { get; set; } = true;
    public AdminMode IsAdmin { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }


    DataGridSettings _sapMovementsINGridSettings;
    public DataGridSettings SapMovementsINGridSettings
    {
        get
        {
            return _sapMovementsINGridSettings;
        }
        set
        {
            if (_sapMovementsINGridSettings != value)
            {
                _sapMovementsINGridSettings = value;
                InvokeAsync(SaveStateAsync);
            }
        }
    }

    private async Task LoadStateAsync()
    {
        await Task.CompletedTask;
        if (!(await SD.CheckPageSettingsVersion("SapMovementsINGridSettings", _jsRuntime)))
            return;
        var result = await _jsRuntime.InvokeAsync<string>("window.localStorage.getItem", "SapMovementsINGridSettings");
        if (!string.IsNullOrEmpty(result))
        {
            _sapMovementsINGridSettings = JsonSerializer.Deserialize<DataGridSettings>(result);
            if (_sapMovementsINGridSettings != null)
            {
                var col_var = _sapMovementsINGridSettings.Columns.Where(c => c.Property == "MoveType").FirstOrDefault();
                if (col_var.FilterValue != null)
                {
                    selectedMoveTypes = JsonSerializer.Deserialize<List<string>>(col_var.FilterValue.ToString());
                }
                var col_var2 = _sapMovementsINGridSettings.Columns.Where(c => c.Property == "SapUnitOfMeasure").FirstOrDefault();
                if (col_var2.FilterValue != null)
                {
                    selectedSapUnitOfMeasure = JsonSerializer.Deserialize<List<string>>(col_var2.FilterValue.ToString());
                }
            }
        }
    }

    private async Task SaveStateAsync()
